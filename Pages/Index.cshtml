@page
@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to My Portfolio</h1>
    <p class="lead">Hello! I'm Sakar Dalal, a passionate software developer with experience in C#, ASP.NET Core, and Azure. Explore my projects, view my resume, and feel free to contact me.</p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" href="#projects" role="button">View Projects</a>
    <a class="btn btn-secondary btn-lg" href="#resume" role="button">View Resume</a>
    <a class="btn btn-info btn-lg" href="#contact" role="button">Contact Me</a>
</div>

<!-- Projects Section -->
<section id="projects" class="my-5">
    <div class="container">
        <h2 class="text-center">My Projects</h2>
        <p class="text-center">Here are some of the projects I've worked on:</p>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <img class="card-img-top" src="path_to_project_image" alt="Project 1 Image">
                    <div class="card-body">
                        <h5 class="card-title">Project 1</h5>
                        <p class="card-text">A brief description of Project 1.</p>
                        <a href="link_to_project1" class="btn btn-primary">View Project</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <img class="card-img-top" src="path_to_project_image" alt="Project 2 Image">
                    <div class="card-body">
                        <h5 class="card-title">Project 2</h5>
                        <p class="card-text">A brief description of Project 2.</p>
                        <a href="link_to_project2" class="btn btn-primary">View Project</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Resume Section -->
<section id="resume" class="my-5">
    <div class="container">
        <h2 class="text-center">My Resume</h2>
        <p class="text-center">Click the button below to download or view my resume:</p>
        <div class="text-center">
            <a href="path_to_resume_pdf" class="btn btn-primary btn-lg" target="_blank" download>Download Resume</a>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="my-5">
    <div class="container">
        <h2 class="text-center">Contact Me</h2>
        <p class="text-center">Feel free to get in touch via the contact form below:</p>
        <form action="submit_contact_form" method="POST">
            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
            </div>
            <div class="form-group">
                <label for="email">Your Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="message">Your Message</label>
                <textarea class="form-control" id="message" name="message" rows="5" placeholder="Enter your message" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>
</section>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <!-- Project 1 -->
        </div>
        <div class="col-md-6 col-sm-12">
            <!-- Project 2 -->
        </div>
    </div>
</div>







